<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ taglib prefix="c" uri="jakarta.tags.core" %>

<div class="card">

	<div class="card-header">
		게임
	</div>
	<div class="card-body">
	<c:forEach var="game" items="${games}">
		<div class="row">
			<div class="d-none">${game.post_id }</div>
				<div class="col-5">${game.title }</div>
			<div class="col row">
				<div class="col"><span class="pe-2">♥️</span>${game.like_point }</div>
				<div class="col"><span class="pe-2">🗨️</span>${game.comment_cnt }</div>
			</div>
		</div>
	</c:forEach>
	</div>

</div>