<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ taglib prefix="c" uri="jakarta.tags.core" %>

<div class="card">

	<div class="card-header">
		베스트 게시글
	</div>
	<div class="card-body">
	<c:forEach var="all" items="${allTopic}">
		<div class="row">
			<div class="d-none">${all.post_id}</div>
			<div class="col-6 row">
				<div class="col">${all.sub_category_name }</div>
				<div class="col">${all.title }</div>
			</div>
			<div class="col-4 row ms-5">
				<div class="col"><span class="pe-2">♥️</span>${all.like_point }</div>
				<div class="col"><span class="pe-2">🗨️</span>${all.comment_cnt }</div>
			</div>
		</div>
	</c:forEach>
	</div>

</div>