<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ taglib prefix="c" uri="jakarta.tags.core" %>

<div class="card">

	<div class="card-header">
		나 호구니?
	</div>
	<div class="card-body">
	<c:forEach var="idiot" items="${idiots}">
		<div class="row">
			<div class="d-none">${idiot.post_id }</div>
				<c:url var="postDetails" value="/post/detail" >
					<c:param name="post_id" value="${etc.post_id }" />
				</c:url>
				<div class="col-5">
					<a class="nav-link" href="${postDetails }">
						${idiot.title }
					</a>
				</div>
			<div class="col row">
				<div class="col"><span class="pe-2">♥️</span>${idiot.like_point }</div>
				<div class="col"><span class="pe-2">🗨️</span>${idiot.comment_cnt }</div>
			</div>
		</div>
	</c:forEach>
	</div>

</div>